/*
 * Basic styles and resets
 */

::selection
	color #fff
	background-color $primaryColor
	text-shadow none
::-moz-selection
	color #fff
	background-color $primaryColor
	text-shadow none

html
	/*
	height 100%
	overflow-y scroll
	*/

body
	height 100%
	background #fff
	margin 0
	padding 0

article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section
	display block
	margin 0
	padding 0

/* reset padding and margin for these elements - remove any that are unused */
body, dl, dt, dd, ul, ol, pre, code, form, fieldset, legend, input, button, textarea, blockquote, th, td
	margin 0
	padding 0

h1, h2, h3, h4, h5, h6, p, pre, dt, li, hr, address, table, label
	margin 0 0 $baseLineHeight
	padding 0

/** Typography **/

body, input, button, textarea, select
	font()

h1, h2, h3, h4, h5, h6
	font(#000000, 30px, 36px,,,bold)

h1
	margin-bottom $baseLineHeight * 2
h2
	font-size 24px
h3
	font-size 18px
h4
	font-size 16px
h5
	font-size 14px
h6
	font-size 13px

fieldset, img
	border 0

img, object
	vertical-align bottom


/** Lists **/

ol li
	list-style-type decimal
ul li
	list-style-type disc
ul ul li
	list-style-type circle
ol ol li
	list-style-type lower-alpha

nav ul,
nav ul li
	list-style none
	padding 0
	margin 0



/** TODO - Below here is to be reused or removed**/

strong,
em
	color darken($baseFontColor, 10)

a
	color $primaryColor
	text-decoration underline
	&:hover
	&:focus
		color darken($primaryColor, 10)
		text-decoration none
	&:active
		outline none

sub
	vertical-align sub
	font-size smaller

sup
	vertical-align super
	font-size smaller

legend
	color #000
	/* padding is used so Internet Explorer does not cut-off descenders in letters like p, g, etc.) */
	padding-bottom .5em

table
	border-collapse collapse
	border-spacing 0

/* caption and summary are very important for tabular data but because caption is nearly impossible to style across browsers many authors do not use it or use display:none to "hide" it (which is almost the same as not using it).
* so to prevent such workaround, I am positioning this element off-screen
*/
caption
	position absolute
	left -999em

/* all th should be centered unless they are in tbody (table body)
*/
th
	text-align center
tbody th
	text-align left

/* These should be self explanatory
*/
code
	color #06f
code, pre
	font-size small

/* This should be self explanatory
*/
blockquote, q, em, cite, dfn, i, cite, var, address
	font-style italic

/* to prevent some browsers from inserting quotes on "q" and "p" ("p" in blockquotes) */
blockquote p:before, blockquote p:after, q:before, q:after
	content ''

th, strong, dt, b
	font-weight bold

ins
	text-decoration none
	border-bottom 3px double #333

del
	text-decoration line-through

abbr, acronym
	border-bottom 1px dotted #333
	font-variant normal

dt
	margin-bottom 4px
dd
	padding-left 0
	margin-bottom 20px

li
	margin-left:20px

hr
	margin-right 30px
	margin-left 30px
	border-style inset
	border-width 1px

