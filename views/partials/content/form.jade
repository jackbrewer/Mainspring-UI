section#forms
	h1 Forms
	form(action="",id="form-name")
		fieldset
			.form-field
				label
					span Text Input
						abbr(title='This field is required')*
					input(type='text',placeholder='Placeholder Text')
				.description
					p A description of what is required.
			.form-field
				label
					span Textarea
					textarea Default text
				.description
					p A more detailed description of what is required
					ul
						li Detailed instruction 1
						li Detailed instruction 2
			.form-field
				label
					span Default Select
					select
						option(value='') Choose An Option
						option(value='') Option 1
						option(value='') Option 2
						option(value='') Option 3
						option(value='') Option 4
						option(value='') Option 5
						option(value='') Option 6
						option(value='') Option 7
						option(value='') Option 8
						option(value='') Option 9
						option(value='') Option 10

			.form-field
				label
					span Chosen Select
					select.chzn-select(data-placeholder="Choose An Option")
						option(value='')
						option(value='') Option 1
						option(value='') Option 2
						option(value='') Option 3
						option(value='') Option 4
						option(value='') Option 5
						option(value='') Option 6
						option(value='') Option 7
						option(value='') Option 8
						option(value='') Option 9
						option(value='') Option 10

			.form-field
				label
					span Chosen Multiple Select
					select.chzn-select(multiple)
						option(value='') Choose An Option
						option(value='') Option 1
						option(value='') Option 2
						option(value='') Option 3
						option(value='') Option 4
						option(value='') Option 5
						option(value='') Option 6
						option(value='') Option 7
						option(value='') Option 8
						option(value='') Option 9
						option(value='') Option 10

			.form-field
				label
					span Date Input
					input(class='datepicker',type='text')

			.form-field
				label.checkbox
					span Single Checkbox
					input(type='checkbox')

			.form-field.field-group
				.label
					span Multiple Checkboxes
				ul
					li
						label
							input(type='checkbox',checked)
							span Option 1
					li
						label
							input(type='checkbox')
							span Option 2
					li
						label
							input(type='checkbox')
							span Option 3
					li
						label
							input(type='checkbox')
							span Option 4

			.form-field.field-group
				.label
					span Radio Buttons
				ul
					li
						label
							input(type='radio',name='radio',checked)
							span Option 1
					li
						label
							input(type='radio',name='radio')
							span Option 2
					li
						label
							input(type='radio',name='radio')
							span Option 3
					li
						label
							input(type='radio',name='radio')
							span Option 4

		fieldset.actions
			input.button.primary(type='submit',value='Submit')
			input.button(type='reset',value='Clear')
